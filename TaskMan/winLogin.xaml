<Window x:Class="TaskMan.winLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskMan"
        mc:Ignorable="d"
        Title="Код доступа" Height="100" Width="200" ResizeMode="NoResize">
    <StackPanel>
        <PasswordBox Name="pbPassword" PasswordChar="*" Width="180" Height="20" Margin="5" KeyDown="pbPassword_KeyDown"/>
        <Button Name="btnPasCheck" Content="Проверка кода доступа" Width="180" Height="25" Margin="5" Click="btnPasCheck_Click"/>
    </StackPanel>
</Window>
